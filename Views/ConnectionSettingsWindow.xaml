<Window x:Class="RamanSoftwareV2.Views.ConnectionSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RamanSoftwareV2.ViewModels"
        Title="Connection Settings"
        Height="320" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 参数区域 -->
        <StackPanel>

            <!-- Mode -->
            <TextBlock Text="Mode:"/>
            <ComboBox Width="180"
                      Margin="0 10 0 15"
                      SelectedIndex="{Binding ModeIndex}">
                <ComboBoxItem Content="Network Port"/>
                <ComboBoxItem Content="Serial Port"/>
            </ComboBox>


            <!-- 网络模式 -->
            <StackPanel Visibility="{Binding IsNetworkMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="IP Address:"/>
                <TextBox Width="180"
                         Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Port:" Margin="0 15 0 0"/>
                <TextBox Width="180"
                         Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>


            <!-- 串口模式 -->
            <StackPanel Visibility="{Binding IsSerialMode, Converter={StaticResource BoolToVisibilityConverter}}">

                <TextBlock Text="COM:"/>
                <ComboBox Width="180"
                          ItemsSource="{Binding ComPorts}"
                          SelectedItem="{Binding SelectedCom}" />

                <TextBlock Text="Baud:" Margin="0 10 0 0"/>
                <ComboBox Width="180"
                          SelectedItem="{Binding SelectedBaud}">
                    <ComboBoxItem Content="9600"/>
                    <ComboBoxItem Content="115200"/>
                </ComboBox>
            </StackPanel>

        </StackPanel>


        <!-- 按钮区域 -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0">

            <Button Content="Cancel"
                    Width="80" Height="30"
                    Margin="0 0 10 0"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />

            <Button Content="Save"
                    Width="80" Height="30"
                    Command="{Binding SaveCommand}" />

        </StackPanel>

    </Grid>
</Window>
